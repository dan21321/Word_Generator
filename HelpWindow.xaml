<Window x:Class="Word_Generator.HelpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Word_Generator"
        xmlns:res="clr-namespace:Word_Generator.Resources"
        mc:Ignorable="d"
        Title="{x:Static res:Strings.AppNameHelp}" Icon="/Resources/helpIncon.ico"
        WindowStartupLocation="CenterOwner"
        WindowStyle="SingleBorderWindow"
        Height="350" Width="500"
        MinHeight="350" MinWidth="500"
        MaxHeight="600" MaxWidth="800">
    <Grid Margin="10">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <TextBlock x:Name="TxtHelp" TextWrapping="Wrap" FontSize="16" Text="{x:Static res:Strings.HelpWindowText}">
                <LineBreak/>
                <TextBlock FontSize="16">
                    <Run Text="{x:Static res:Strings.EmailAuthor}"/>
                    <Hyperlink Click="Email_Click">
                        <Run Text="dan.sinckovckin2014@yandex.ru"/>
                    </Hyperlink>
                </TextBlock>
            </TextBlock>
        </ScrollViewer>
    </Grid>
</Window>
